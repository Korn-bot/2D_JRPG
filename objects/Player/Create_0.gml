// Local Variables
yspd = 0; 
xspd = 0;


// functions Creating 


function Move_UP(char_key){
	 if(keyboard_check(char_key) = 1){yspd += yspd +1}
};
function Move_DOWN(char_key){
	 if(keyboard_check(char_key) = 1){yspd += yspd -1}
};
function Move_LEFT(char_key){
	 if(keyboard_check(char_key) = 1){xspd += xspd +1}
};
function Move_RIGHT(char_key){
	 if(keyboard_check(char_key) = 1){xspd += xspd -1}
};
